version: '3.8'

services:
  portal:
    build: ./landing
    volumes:
      - ./landing:/usr/share/nginx/html
      - ./nginx/ssl:/etc/nginx/ssl:ro
    environment:
      - ADMIN_USER=${ADMIN_USER}
      - ADMIN_PASS_HASH=${ADMIN_PASS_HASH}
      - JWT_SECRET=${JWT_SECRET}
    networks:
      - portal-network
    restart: unless-stopped
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.portal.rule=Host(`localhost`)" # Основной сайт на http://localhost:823
      - "traefik.http.services.portal.loadbalancer.server.port=80"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost/health"]
      interval: 30s
      timeout: 10s
      retries: 3

  # 2. Flask API
  flask-app:
    build: ./flask-app
    # Переопределяем команду, чтобы папки создавались и в контейнере
    command: >
      sh -c "mkdir -p uploads reports_output report_templates && 
             gunicorn --bind 0.0.0.0:5000 run:app"
    networks:
      - portal-network
      - backend-network
    depends_on:
      - redis
      - postgres
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.flask.rule=Host(`flask.localhost`)"
      - "traefik.http.services.flask.loadbalancer.server.port=5000"

  # 3. React App
  react-app:
    build: 
      context: ./react-app
      args:
        - NODE_ENV=production
    expose:
      - "80" # Внутри образа nginx слушает 80
    networks:
      - portal-network
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.react.rule=Host(`react.localhost`)"
      - "traefik.http.services.react.loadbalancer.server.port=80"

  # 4. Postgres
  postgres:
    image: postgres:15-alpine
    environment:
      - POSTGRES_USER=${DB_USER}
      - POSTGRES_PASSWORD=${DB_PASSWORD}
      - POSTGRES_DB=portal_db
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./init-db.sql:/docker-entrypoint-initdb.d/init.sql
    networks:
      - backend-network
    restart: unless-stopped

  # 5. Redis
  redis:
    image: redis:7-alpine
    command: redis-server --requirepass ${REDIS_PASSWORD}
    volumes:
      - redis_data:/data
    networks:
      - backend-network

  # 6. Prometheus
  prometheus:
    image: prom/prometheus
    volumes:
      - ./monitoring/prometheus.yml:/etc/prometheus/prometheus.yml
      - prometheus_data:/prometheus
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
    ports:
      - "9090:9090"
    networks:
      - monitoring-network
      - portal-network
    restart: unless-stopped

  # 7. Grafana
  grafana:
    image: grafana/grafana
    environment:
      - GF_SECURITY_ADMIN_PASSWORD=${GRAFANA_PASSWORD}
    ports:
      - "3001:3000"
    networks:
      - monitoring-network
      - portal-network
    depends_on:
      - prometheus
    restart: unless-stopped

  # 8. Traefik (Reverse Proxy)
  # Изменены порты для Windows, чтобы избежать конфликтов.
  # Исправлен путь к docker.sock для корректной работы на Windows.
  traefik:
    image: traefik:v2.10
    command:
      - "--api.insecure=true"
      - "--providers.docker=true"
      - "--providers.docker.exposedbydefault=false"
      - "--entrypoints.web.address=:80"
      - "--entrypoints.websecure.address=:443"
    ports:
      - "8080:80"      # Доступ к порталу: http://localhost:8080
      - "8443:443"
    volumes:
      # Важно для Windows/Docker Desktop: используем двойной слэш
      - //var/run/docker.sock:/var/run/docker.sock:ro
      - ./letsencrypt:/letsencrypt
    networks:
      - portal-network
    restart: unless-stopped

  # 9. Portainer
  portainer:
    image: portainer/portainer-ce:latest
    command: -H unix:///var/run/docker.sock
    restart: unless-stopped
    ports:
      - "9000:9000"
    volumes:
      - //var/run/docker.sock:/var/run/docker.sock
      - portainer_data:/data
    networks:
      - portal-network

networks:
  portal-network:
    driver: bridge
  backend-network:
    driver: bridge
  monitoring-network:
    driver: bridge

volumes:
  postgres_data:
  redis_data:
  prometheus_data:
  grafana_data:
  portainer_data: